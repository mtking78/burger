{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<h1>Burger App</h1>

<p>Make and eat burgers with this app</p>

<!-- Pass in data from server.js -->
<ul>
    {{#each burgers}}
        <li>
            <p><span class="label">ID:</span> {{this.id}}</p>
            <p><span class="label">Burger:</span> {{this.burger_name}}</p>

            <button data-id="{{this.id}}" class="eatburger">Eat the burger</button>
        </li>
    {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="newburger">New Burger:</label>
        <input type="text" id="newburger" name="burger">
    </div>
    {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
    <button type="submit">Add Burger</button>
</form>